<% @posts.each do |post| %>
<div class="card">
  <div class="card-header text-center fs-6 fw-bold text-muted">
    <%= link_to post.title, {:action => 'show', :id => post.id}%>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0 p-3">
      <p class="text-start"><%= truncate(post.text, length: 350) %></p>
      <h3 class="text-start">Comments <%= post.comments.count%>  <span>Likes <%= post.likes.count%></span></h3>
      <footer class="blockquote-footer p-4 text-end"><cite title="Source Title">Posted <%= time_ago_in_words(post.created_at)%> ago</cite></footer>
    </blockquote>
     <% post.recent_comments.each do |comment| %>
            <div class="comment text-start">
                <p><%= comment.text %></p>
                <p class="text-start text-primary"><%= time_ago_in_words(comment.created_at)%> ago</p>
            </div>
        <% end %>
     </div>
  </div>
</div>
<% end %>