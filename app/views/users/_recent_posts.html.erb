<h2 class="pb-2 border-bottom">Recent Posts</h2>
<% @user.recent_posts.each do |post| %>
<div class="card">
  <div class="text-start">
      <%= link_to user_post_path(@user.id, post.id) do %>
          <h2 class="card-title p-4"><%= post.title %></h2>
      <% end %>
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0 p-3">
      <p class="card-text"><%= truncate(post.text, length: 335, omission: '...')%></p>
      <h3>Comment <%= post.comments.count%>,  <span>Likes <%= post.likes.count%></span></h3>
      <p class="card-text text-start">Posted <%= time_ago_in_words(post.created_at)%> ago</p>
    </blockquote>
   </div>
</div>
<% end %>

