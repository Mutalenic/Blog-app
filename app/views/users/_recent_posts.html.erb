<h2 class="pb-2 border-bottom text-center">Recent Posts</h2>
<% @user.recent_posts.each do |post| %>
<div class="card">
  <div class="card-body py-5 px-md-5">
    <%= link_to user_post_path(@user.id, post.id) do %>
          <h4 class="text-center"><%= post.title %></h4>
      <% end %>
    <blockquote class="text-sm-left">
      <p class="text-sm-left"><%= post.text%></p>
      <h3>Comment <%= post.comments.count%>,  <span>Likes <%= post.likes.count%></span></h3>
      <p class="card-text text-start">Posted <%= time_ago_in_words(post.created_at)%> ago</p>
    </blockquote>
   </div>
</div>
<% end %>

